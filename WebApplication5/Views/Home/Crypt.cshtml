<body>
    <div>

        @text
        @if (text == "")
        {
            <details>
                <summary>Текст файла</summary>
                <div class="box1">
                    @foreach (string dataLine in userData)
                    {

                        foreach (string dataItem in dataLine.Split(delimiterChar))
                        {
                            @dataItem
                        }


                    }
                </div>
            </details>
        }

    </div>
</body>
