
@{
    ViewBag.Title = "Crypt";

    var text = "";
    Array userData = null;


    char[] delimiterChar = { ',' };

    var dataFile = Server.MapPath("~/Files/encrypt.txt");


    if (File.Exists(dataFile))
    {
        userData = File.ReadAllLines(dataFile);
        if (userData == null)
        {
            // Empty file.
            text = "Файл пуст.";
        }
    }
    else
    {
        // File does not exist.
        text = "      ";
    }


    var chooseFile = Server.MapPath("~/Files/encrypt.txt");

    var result = "";
    int isReady = 0;
    Array userData1 = null;

    if (File.Exists(chooseFile))
    {
        userData1 = File.ReadAllLines(chooseFile, System.Text.Encoding.GetEncoding("windows-1251"));
        if (userData1 == null)
        {
            // Empty file.
            result = "Файл загружен, но он пуст.";
            isReady = 1;
        }
        else
        {
            result = "Файл готов к шифрованию!";
            isReady = 2;
        }
    }
    else
    {
        // File does not exist.
        result = "Файла не существует.";
        isReady = 0;
    }

}


